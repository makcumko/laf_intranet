<div class="row">
    <div class="span4 offset4 well">
        <legend>Необходим вход в систему</legend>
        <form method="post">
            <div>
                <input type="text" id="login" class="span12" name="login" placeholder="Логин">
                <input type="password" id="password" class="span12" name="password" placeholder="Пароль">
            </div>
            <p>
                <button type="submit" name="submit" class="btn btn-success btn-block">Войти</button>
            </p>
            <p>
                <a href="/User/Register" class="btn btn-info span6">Зарегистрироваться</a>
                <a href="/User/Restore" class="btn btn-danger span6">Забыл пароль</a>
            </p>
        </form>
    </div>
</div>
